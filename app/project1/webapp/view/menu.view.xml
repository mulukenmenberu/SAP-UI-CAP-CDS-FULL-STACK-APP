<mvc:View
  xmlns:t="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:u="sap.ui.unified"
  xmlns:c="sap.ui.core"
  xmlns="sap.m"	
  controllerName="project1.controller.menu">

  <Table id="myTable" items="{/yourItems}">
    <columns>
      <Column>
        <Text text="Value" />
      </Column>
    </columns>
    <items>
      <ColumnListItem>
        <cells>
          <FlexBox  alignItems="Center">
     <!-- <Button  text="Add" style="{= ${Status} === 'red'? 'red' : 'blue'}" /> -->

            <Image height="1.5rem"  src="{= ${Status} === 'red'? 'red.png' :${Status} === 'green'? 'green.png' : 'default.jpg'}" />            
          </FlexBox>
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</mvc:View>
